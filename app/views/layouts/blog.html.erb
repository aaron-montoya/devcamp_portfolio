<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    
    <meta name="keywords" content="<%= @seo_keywords%>" />
    
    <%= favicon_link_tag 'favicons/other_favicon.ico' %>

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <!-- Start of Nav -->
    <%= render 'shared/blog_nav' %>
    <!-- End of Nav -->
    
    <!-- Start of Blog Header -->
    <%= render 'shared/blog_masthead' %>
    <!-- End of Blog Header -->
    
    
    
    <!-- Start of Container and Row elements -->
    <div class="container">

      <div class="row">
    <!-- Start of Container and Row elements -->
        
        <%= yield %>
        
        <!-- Start of Sidebar -->
        <%= render 'shared/blog_sidebar' %>
        <!-- End of Sidebar -->
        
      </div>
      
      <%= render 'shared/blog_footer' %>
      
      <%= alerts %>
      
      
        
    <!-- End of Container and Row elements -->
     
    </div>
    <!-- End of Container and Row elements -->
  </body>
</html>
